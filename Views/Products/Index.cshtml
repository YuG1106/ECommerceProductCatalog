@model IEnumerable<ECommerceProductCatalog.Models.Product>

@{
    ViewData["Title"] = "Product Catalog";
}

<h2 class="text-center mt-4">🛍️ Product Catalog</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">➕ Add New Product</a>
</div>

<form method="get" asp-action="Index" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by name or category" />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price (₹)</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="Image" width="80" height="80" style="object-fit:cover;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price.ToString("N2")</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏ Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">👁 View</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No products found.</div>
}
